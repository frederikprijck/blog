{{> header}}
{{> navbar }}

  <main class="content">
    <div class="container">
      <article class="o-article">
          <header class="o-article__header">
              <div class="o-article__header__title">
                  <h2>{{ title }}</h2>
              </div>
              <div class="o-article__header__meta">
                  <time class="published">{{ date }}</time> - {{ timeToRead }} read.
              </div>
          </header>
          <main class="o-article__content">
              {{{ contents }}}
          </main>
          <footer class="o-article__footer">
              <div class="tag-links">
                  Tags: 
                  {{#each tags}}
                  <a rel="tag" class="a-badge">{{ . }} </a>
                  {{/each}}
              </div>
      
              {{> comments }}
          </footer>
      </article>
    </div>
  </main>

{{> footer }}
