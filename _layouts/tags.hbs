{{> header}}
{{> navbar }}

<main class="content">
    <div class="container">
        <div class="entries">
            {{#each pagination.files }}
                <article class="o-article">
                    <header class="o-article__header">
                        <div class="o-article__header__title">
                            <h2><a href="/{{ path }}">{{ title }}</a></h2>
                        </div>
                        <div class="o-article__header__meta">
                            <time class="published" datetime="2017-01-18">{{ date }}</time>
                        </div>
                    </header>
                    <main class="o-article__content">
                        {{{ excerpt }}}
                    </main>
                    <footer class="o-article__footer">
                        <div class="tag-links">
                            Tags: 
                            {{#each tags}}
                                <a href="/tags/{{slug}}" rel="tag" class="a-badge">{{ name }} </a>
                            {{/each}}
                        </div>
                    </footer>
                </article>
            {{/each}}
        </div>
    </div>
  </main>

{{> footer }}